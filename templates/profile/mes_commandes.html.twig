{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Mes Commandes</h1>
    {% if commandes is empty %}
        <p>Vous n'avez aucune commande pour le moment.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID Commande</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.date|date('Y-m-d') }}</td>
                    <td>{{ commande.status }}</td>
                    <td>{{ commande.total }} €</td>
                    <td>
                        {# <a href="{{ path('app_commande_detail', {'id': commande.id}) }}" class="btn btn-info">Détails</a> #}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
