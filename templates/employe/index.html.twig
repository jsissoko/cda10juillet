{% extends 'base.html.twig' %}

{% block title %}Espace Employé{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Intranet</h1>
    <h2>Produits que j'ai ajouté</h2>
    <div class="mb-3">
        <a href="{{ path('employe_produit_new') }}" class="btn btn-success">Ajouter un nouveau produit</a>
    </div>
     <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
<tr>
    <td>{{ produit.nom }}</td>
    <td>{{ produit.prix }}</td>
    <td>{{ produit.quantite }}</td>
    <td>
        <div class="btn-group" role="group" aria-label="Actions de Produit">
            <a href="{{ path('employe_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Modifier</a>
            <form action="{{ path('employe_produit_delete', {'id': produit.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');" style="display: inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </td>
</tr>

            {% else %}
                <tr>
                    <td colspan="4">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    <hr>
        <h2>Mes Utilisateurs</h2>
 
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.nom }} {{ client.prenom }}</td>
                    <td>{{ client.email }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': client.id}) }}" class="btn btn-info">Voir Détails</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun utilisateur attribué.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
