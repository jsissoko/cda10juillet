{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="container mt-5">
    <h1>Messagerie</h1>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab" aria-controls="received" aria-selected="true">Messages reçus</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button" role="tab" aria-controls="sent" aria-selected="false">Messages envoyés</button>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="received" role="tabpanel" aria-labelledby="received-tab">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Expéditeur</th>
                        <th>Titre</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th>Lire</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in received_messages %}
                        <tr>
                            <td>{{ message.expediteur.email }}</td>
                            <td>{{ message.title }}</td>
                            <td>{{ message.message|slice(0, 50) }}...</td>
                            <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                            <td><a href="{{ path('message_show', {'id': message.id}) }}" class="btn btn-primary">Voir</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="sent" role="tabpanel" aria-labelledby="sent-tab">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Destinataire</th>
                        <th>Titre</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in sent_messages %}
                        <tr>
                            <td>{{ message.destinataire.email }}</td>
                            <td>{{ message.title }}</td>
                            <td>{{ message.message|slice(0, 50) }}...</td>
                            <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ message.isRead ? 'Lu' : 'Non lu' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
