{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container mt-5">
        <h1 class="mb-4">Register</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="mb-3">
            {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.prenom) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.pays, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.pays, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.pays) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.ville, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.ville) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.nom_rue, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.nom_rue, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.nom_rue) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.numero_rue, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.numero_rue, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.numero_rue) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.telephone) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <button type="submit" class="btn btn-success">Register</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
